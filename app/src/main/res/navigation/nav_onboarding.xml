<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onboarding"
    app:startDestination="@id/nav_explanation_1">

    <fragment
        android:id="@+id/nav_explanation_1"
        android:name="nl.rijksoverheid.en.onboarding.Explanation1Fragment"
        tools:layout="@layout/fragment_explanation_1">
        <action
            android:id="@+id/action_next"
            app:destination="@id/nav_explanation_2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_explanation_2"
        android:name="nl.rijksoverheid.en.onboarding.Explanation2Fragment"
        tools:layout="@layout/fragment_explanation_2">
        <action
            android:id="@+id/action_next"
            app:destination="@id/nav_explanation_3"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_explanation_3"
        android:name="nl.rijksoverheid.en.onboarding.Explanation3Fragment"
        tools:layout="@layout/fragment_explanation_3">
        <action
            android:id="@+id/action_next"
            app:destination="@id/nav_enable_api"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_enable_api"
        android:name="nl.rijksoverheid.en.onboarding.EnableApiFragment"
        tools:layout="@layout/fragment_enable_api" />
</navigation>